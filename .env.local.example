# URL base da aplicação para geração de links absolutos
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Chave e modelo para chamadas à Responses API da OpenAI
OPENAI_API_KEY=
OPENAI_MODEL=

# Banco de dados e autenticação
DATABASE_URL=
AUTH_SECRET=

# Armazenamento de áudios/arquivos
# Use "s3" em produção; defina "local" apenas em desenvolvimento
STORAGE_DRIVER=s3
S3_REGION=
S3_BUCKET=
S3_ENDPOINT=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
# Para o modo local, habilite o driver local e ajuste a URL exposta
# LOCAL_STORAGE_BASE_URL=http://localhost:3000/storage

# Rate limit compartilhado (opcional)
# REDIS_URL=redis://localhost:6379

# Flags opcionais de recursos
AUDIO_CAPTURE_ENABLED=true

# Variáveis auxiliares para o Playwright
# E2E_RUN=false
